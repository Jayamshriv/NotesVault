<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/logo_bg_color">

  <ImageView
      android:id="@+id/splashsc_logo"
      android:layout_width="@dimen/dimens_splashsc"
      android:layout_height="@dimen/dimens_splashsc"
      android:src="@drawable/notevaultopaclogo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.319" />


  <TextView
      android:id="@+id/splashsc_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunitosans_bold"
      android:gravity="center"
      android:text="@string/app_name"
      android:textColor="@color/white"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/splashsc_logo" />


  <TextView
      android:id="@+id/splashsc_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunitosans_italic"
      android:gravity="center"
      android:text="   Safe Guards your Notes  "
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/splashsc_progBar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/splashsc_title"
      app:layout_constraintVertical_bias="0.0" />


  <ProgressBar
      android:id="@+id/splashsc_progBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:theme="@style/ProgressBar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/splashsc_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>

